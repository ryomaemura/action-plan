<div class="content-header">
  <h2>アクションプラン id:<%= @action.id %></h2>
</div>

<div class="action-show">
  <div class="action-show-info">
    <div class="book-item">
      <%= image_tag @action.book_image || "no-image.jpg", alt: @action.book_title, class: "book-image" %>
      <p class="book-title"><%= @action.book_title %></p>
      <%= link_to "show detail", @action.book_link, class: "book-link btn btn-light btn-block mb-1", target: "_blank" %>
    </div>
    <p class="action-show-user">投稿者<br><%= User.find(@action.user_id).name %></p>
  </div>
  <div class="action-plan-text-area">
    <p class="action-plan-text"><%= safe_join((@action.content ||= "").split("\n"),tag(:br)) %></p>
    <% if is_login && current_user.id == @action.user_id %>
      <div class="action-plan-button-area">
        <%= link_to "削除", action_url, method: "delete", class: "action-plan-button btn btn-light" %>
        <%= link_to "編集", edit_action_url, class: "action-plan-button btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>
